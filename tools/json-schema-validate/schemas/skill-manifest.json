{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Skill Manifest",
  "description": "JSON Schema for the Session Parameters block in SKILL.md files. Validates protocol-tier skill manifests.",
  "type": "object",
  "required": ["taskType", "phases", "nextSkills"],
  "properties": {
    "taskType": {
      "type": "string",
      "description": "The active mode of operation (e.g., IMPLEMENTATION, ANALYSIS, FIX)"
    },
    "phases": {
      "type": "array",
      "minItems": 1,
      "description": "Ordered list of phases for this skill session",
      "items": {
        "type": "object",
        "required": ["label", "name", "steps", "commands"],
        "properties": {
          "label": {
            "type": "string",
            "pattern": "^[0-9]+(\\.[0-9A-Z]+)?$",
            "description": "Phase label: '0', '1', '3.A', '4.1', etc."
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Short phase name (e.g., 'Setup', 'Build Loop')"
          },
          "steps": {
            "type": "array",
            "description": "§CMD_* step references executed sequentially by §CMD_EXECUTE_PHASE_STEPS",
            "items": {
              "type": "string",
              "pattern": "^§CMD_[A-Z_]+$"
            }
          },
          "commands": {
            "type": "array",
            "description": "§CMD_* commands available during this phase (not auto-executed)",
            "items": {
              "type": "string",
              "pattern": "^§CMD_[A-Z_]+$"
            }
          },
          "proof": {
            "type": "array",
            "description": "Proof field names required to leave this phase",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "nextSkills": {
      "type": "array",
      "minItems": 1,
      "description": "Skills to suggest after session completion",
      "items": {
        "type": "string",
        "pattern": "^/[a-z][a-z-]*$"
      }
    },
    "directives": {
      "type": "array",
      "description": "Directive file types this skill loads beyond core set",
      "items": {
        "type": "string"
      }
    },
    "planTemplate": {
      "type": "string",
      "description": "Path to the plan template"
    },
    "logTemplate": {
      "type": "string",
      "description": "Path to the log template"
    },
    "debriefTemplate": {
      "type": "string",
      "description": "Path to the debrief template"
    },
    "requestTemplate": {
      "type": "string",
      "description": "Path to the REQUEST template"
    },
    "responseTemplate": {
      "type": "string",
      "description": "Path to the RESPONSE template"
    },
    "modes": {
      "type": "object",
      "description": "Mode presets (3 named + custom)",
      "patternProperties": {
        "^[a-z][a-z-]*$": {
          "type": "object",
          "required": ["label", "description", "file"],
          "properties": {
            "label": { "type": "string" },
            "description": { "type": "string" },
            "file": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
